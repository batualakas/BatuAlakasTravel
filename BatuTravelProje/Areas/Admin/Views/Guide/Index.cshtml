@using EntityLayer.Concrete
@model List<Guide>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<style >
img{
    border-radius:50%;
}
</style>
<h1>Rehber Listesi</h1>

<table class="table table-bordered">
    <tr>
    <th>#</th>
    <th>Görsel</th>
    <th>Ad Soyad</th>
    <th>Açıklama</th>
    <th>Durum</th>
   
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.GuideID</td>
            <td><img src="@item.Image" height="50" width="50" /></td>
            <td>@item.Name</td>
            <td>@item.Description</td>
            
                @if (item.Status==true)
                {
                <td><a href="/Admin/Guide/ChangeToFalse/@item.GuideID" class="btn btn-outline-warning">Rehberi Pasif Duruma Çek</a></td>
                }
                else
            {
                <td><a href="/Admin/Guide/ChangeToTrue/@item.GuideID" class="btn btn-outline-info">Rehberi Aktif Duruma Çek</a></td>
            }

            
        
        </tr>
    }
</table>
<a href="/Admin/Guide/AddGuide" class="btn btn-outline-primary">Yeni Rehber Ekle</a>